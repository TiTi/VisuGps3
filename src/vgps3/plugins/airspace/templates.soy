{namespace vgps3.airspace.templates}

/**
 * @param row
 */
{template .infoWindow}
  <ul class="vgps3-as-info">
    <li class="vgps3-as-title"><a href="{$row['url'].value}">{$row['name'].value}</a></li>
    <li><strong>class:</strong> {$row['class'].value}</li>
    <li><strong>altitude:</strong><span class="icon-circle-arrow-down"></span>{$row['floor'].value} <span class="icon-circle-arrow-up"></span>{$row['ceiling'].value}</li>
  </ul>
{/template}

/**
 * @param maxAltitude
 */
{template .asControl}
  <select id="vgps3-as-altitude">
    {for $v in range(1, $maxAltitude + 1)}
    <option value="{$v}" {if $v == 1}selected{/if}>{$v}000m</option>
    {/for}
  </select>
  <span class="icon-plane icon-2x"></span>
{/template}
